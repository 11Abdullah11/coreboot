choice
	prompt "Mainboard model"
	depends on VENDOR_GIGABYTE

config BOARD_GIGABYTE_M57SLI
	bool "M57SLI"
	select ARCH_X86
	select OPTION_TABLE
	select CPU_AMD_K8
	help
	  Gigabyte M57SLI

endchoice

config MAINBOARD_DIR
	string
	default gigabyte/m57sli
	depends BOARD_GIGABYTE_M57SLI
