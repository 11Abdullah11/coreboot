{
	device_operations = "w83627hf_ops";
	/* To override any of these, put the over-ride in mainboard dts. */

	/* Floppy */
	floppyenable = "0";
	floppyio = "0x3f0";
	floppyirq = "0x60";
	floppydrq = "0x02";

	/* Parallel port */
	ppenable = "0";
	ppio = "0x378";
	ppirq = "7";

	/* COM1 */
	com1enable = "0";
	com1io = "0x3f8";
	com1irq = "4";

	/* COM2 */
	com2enable = "0";
	com2io = "0x2f8";
	com2irq = "3";

	/* Keyboard */
	kbenable = "0";
	kbio = "0x60";
	kbio2 = "0x62";
	kbirq = "1";
	kbirq2 = "12";

	/* Consumer IR */
	cirenable = "0";

	/* Game port */
	gameenable = "0";
	gameio = "0x220";
	gameio2 = "0x400";
	gameirq = "9";

	/* GPIO2 */
	gpio2enable = "0";

	/* GPIO3 */
	gpio3enable = "0";

	/* ACPI */
	acpienable = "0";

	/* Hardware Monitor */
	hwmenable = "0";
	hwmio = "0x290";
	hwmirq = "5";
};
